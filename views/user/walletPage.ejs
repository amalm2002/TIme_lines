<%- include('../layout/user/header') %>
    <%- include('../layout/userProfile/sidebar') %>

    <style>
        .wallet-container {
            width: 100%;
            max-width: 1000px;
            background-color: #ffffff;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            padding: 40px;
            margin: auto;
        }
        h1 {
            font-size: 28px;
            margin-bottom: 30px;
            padding-bottom: 15px;
            border-bottom: 2px solid #e0e0e0;
            color: #333;
        }
        .amount-container {
            display: flex;
            justify-content: space-between;
            flex-wrap: wrap;
            gap: 20px;
            margin-bottom: 30px;
        }
        .amount-box {
            flex: 1;
            min-width: 200px;
            padding: 20px;
            border-radius: 10px;
            background-color: #f9f9f9;
            border: 1px solid #e0e0e0;
            transition: all 0.3s ease;
        }
        .amount-box:hover {
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }
        .amount-label {
            font-size: 14px;
            color: #666;
            margin-bottom: 5px;
        }
        .amount-value {
            font-size: 24px;
            font-weight: bold;
        }
        #balance .amount-value { color: #4CAF50; }
        #returnAmount .amount-value { color: #F44336; }
        #canceledAmount .amount-value { color: #FFC107; }
        .transaction-table {
            width: 100%;
            border-collapse: collapse;
            background-color: #f9f9f9;
            border-radius: 10px;
            overflow: hidden;
        }
        .transaction-table th, .transaction-table td {
            padding: 15px;
            text-align: left;
            border-bottom: 1px solid #e0e0e0;
        }
        .transaction-table th {
            background-color: #4b574c;
            color: white;
        }
        .transaction-table tr:hover {
            background-color: #f0f0f0;
        }
        .transaction-description {
            font-size: 14px;
            color: #333;
            white-space: pre-wrap; 
        }
        .transaction-amount.positive {
            color: #4CAF50;
        }
        .transaction-amount.negative {
            color: #F44336;
        }
    </style>
    </head>
    <body>
        <div class="wallet-container">
            <h1>My Wallet</h1>
            <div class="amount-container">
                <div id="balance" class="amount-box">
                    <div class="amount-label">Total</div>
                    <div class="amount-value">₹<%= (total || 0).toFixed(2) %></div>
                </div>
            </div>
            <table class="transaction-table">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Description</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody id="transactionList">
                    <% walletEntries.forEach(entry => { %>
                        <tr>
                            <td><%= new Date(entry.date).toLocaleDateString() %></td>
                            <td class="transaction-description"><%= entry.description %></td>
                            <td class="<%= entry.amount >= 0 ? 'transaction-amount positive' : 'transaction-amount negative' %>">
                                ₹<%= entry.amount.toFixed(2) %>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </body>
    
    
    
    
    </div>

 

